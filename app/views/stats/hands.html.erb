<table class="table">
	<tr>
		<th>done</th>
		<th>found/success</th>
		<th>hulplijn</th>
		<th>assistent</th>
		<th>student</th>
		<th>created</th>
		<th>updated</th>
		<th>mood</th>
	</tr>
	<% @today.each do |entry| %>
	<tr>
		<td><%= entry.done ? "v" : "" %></td>
		<td><%= entry.success ? "v" : "x" %></td>
		<td><% if entry.helpline %><span class="glyphicon glyphicon-phone-alt text-danger"></span><% end %></td>
		<td><%= entry.assist.name if entry.assist %></td>
		<td><%= entry.user.name %></td>
		<td><span data-placement="bottom" data-toggle="tooltip" title="<%= entry.help_question %>"><%= entry.created_at.strftime("%H:%M") %></button></td>
		<td><span data-placement="bottom" data-toggle="tooltip" title="<%= entry.note %>"><%= entry.updated_at.strftime("%H:%M") %></button></td>
		<td><%= entry.evaluation %></td>
	</tr>
	<% end %>
</table>

<script>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>