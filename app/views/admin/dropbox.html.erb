<div class="container-fluid">
	<div class="row-fluid">

		<div class="tabbable">
			<div class="tab-content">

				<% if @dropbox_session %>
				Dropbox is currently connected.
				<% else %>
				There is no Dropbox connection.
				<% end %>
	
				<%= form_tag({ action: "dropbox" }, { class: "form-horizontal" }) do %>
				<div class="form-group">
					<label class="control-label col-2" for="inputAppKey">App Key</label>
					<div class="col-10">
						<input type="text" id="inputAppKey" name="dropbox_app_key">
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-2" for="inputAppSecret">App Secret</label>
					<div class="col-10">
						<input type="text" id="inputAppSecret" name="dropbox_app_secret">
					</div>
				</div>
				<div class="form-group">
					<div class="col-10 offset-2">
						<button type="submit" class="btn">Sign in</button>
					</div>
				</div>
				<% end %>
	
			</div>
		</div>
	
	</div>
</div>
