<table id="grade-table" class="table table-bordered table-condensed">

	<tr>
		<th>Active</th>
		<th>Done</th>
		<th>Name</th>
		<th>ID</th>
		<% @psets.each do |pset| %>
		<th><%= pset.name %></th>
		<% end %>
	</tr>

	<% users.each do |user| %>
	<tr>
		<td><%= check_box_tag "active#{user.id}", 'yes', user.active, :onclick => "$.post('/admin/enable', { id:'#{user.id}', active:$(this).is(':checked') });" %></td>
		<td><%= check_box_tag "done#{user.id}", 'yes', user.done, :onclick => "$.post('/admin/done', { id:'#{user.id}', done:$(this).is(':checked') });" %></td>
		<td>
			<% if user.mail %>
			<%= link_to user.name, 'mailto:' + user.mail %>
			<% else %>
			<%= user.name %>
			<% end %>
		</td>
		<td><%= user.uvanetid %></td>
		<% @psets.each do |pset| %>
		<td>
			<% if submitted = user.submit(pset) %>
				<% if submitted.grade and not submitted.grade.grade.blank? %>
				<%= link_to "#{submitted.grade.grade}", edit_submit_grade_url(submit_id: submitted.id), class: 'btn btn-primary' %>
				<% else %>
				<%= link_to 'sub', new_submit_grade_url(submit_id: submitted.id), class: 'btn btn-default' %>
				<% end %>
			<% else %>
				<%= link_to 'no', admin_create_submit_url(user_id: user.id, pset_id: pset.id), method: :post, class:'btn btn-default auto-hide' %>
			<% end %>
		</td>
		<% end %>
	</tr>
	<% end %>

</table>
