<div id="timeline" class="row" style="margin-bottom:2em">
	<div class="col-sm-7">
		<%= render partial: "timeline/alerts" %>
		<% if current_user.staff? %>
		<div class="card">
			<div class="card-body">
			    <h5 class="card-title">Add announcement</h5>
				<% @alert = Alert.new() %>
				<%= render partial: "alerts/form" %>
			</div>
		</div>
		<% end %>
	</div>

	<div class="col-sm-5">
		<% if current_user.staff? %>
		<%= render partial: "timeline/staff" %>
		<% elsif current_user.student? %>
		<%= render partial: "timeline/items" %>
		<% end %>
	</div>
</div>
