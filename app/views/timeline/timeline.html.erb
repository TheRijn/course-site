<h1 style="background-color: transparent; font-family: Palatino; color: #111; font-size: 30pt"><%= Settings['long_course_name'] %></h1>

<style>
	.panel-default
	{
		-webkit-box-shadow: 0px 0px 35px rgba(140, 152, 164, 0.125);
		-moz-box-shadow: 0px 0px 35px rgba(140, 152, 164, 0.125);
		box-shadow: 0px 0px 35px rgba(140, 152, 164, 0.125);
		border:0;
	}
</style>

<div class="row" style="margin-bottom:2em">
	<div class="col-xs-5">
		<% @alerts.each do |item| %>
		<div class="panel panel-default">
			<div class="panel-body">
				<%= render partial: "timeline/#{item.class.to_s.downcase}", object: item %>
			</div>
		</div>
		<% end %>
	</div>

	<div class="col-xs-4">
		<% @items.each do |item| %>
		<div class="panel panel-default">
			<div class="panel-body">
				<%= render partial: "timeline/#{item.class.to_s.downcase}", object: item %>
			</div>
		</div>
		<% end %>
	</div>

	<div class="col-xs-3">
		<div class="panel panel-default">
			<div class="panel-body">
				<h4>Upcoming</h4>
				Studiewijzer
			</div>
		</div>
	</div>
</div>
