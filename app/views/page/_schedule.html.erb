<% @registrations.each do |registration| %>

<h3><%= registration.track.name %><br><%= registration.schedule_span.name %></h4>

<% @week_contents = registration.schedule_span.content %>
<p id="description" ><%= @week_contents.delete('description') %></p>
<ul id="contents" class="list-unstyled">
	<% @week_contents.each do |item, link| %>
	<li><a href="<%= link %>" ><%= item.sub('[', '<span class="label label-info">').sub(']', '</span>').html_safe %></a></li>
	<% end %>
</ul>

<div class="btn-group btn-group-justified">
	<%= link_to({ action: :prev_in_schedule, registration_id: registration.id }, { method: :post, class: 'btn btn-xs' }) do %>
	<span class='glyphicon glyphicon-arrow-left'></span>
	<% end %>
	<%= link_to({ action: :next_in_schedule, registration_id: registration.id }, { method: :post, class: 'btn btn-xs' }) do %>
	<span class='glyphicon glyphicon-arrow-right'></span>
	<% end %>
</div>

<% end %>
