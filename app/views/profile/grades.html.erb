<h1>Grades</h1>

<% if Settings.public_grades %>

<% @grades.each do |grade| %>

<h2><%= grade.submit.pset.name %></h2>

<table class="table table-bordered" style="width:auto">
	<tr>
		<td>Scope</td>
		<td><%= grade.scope %></td>
	</tr>
	<tr>
		<td>Correctness</td>
		<td><%= grade.correctness %></td>
	</tr>
	<tr>
		<td>Design</td>
		<td><%= grade.design %></td>
	</tr>
	<tr>
		<td>Style</td>
		<td><%= grade.style %></td>
	</tr>
	<tr>
		<td>Final</td>
		<td><%= translate_grade(grade.grade) %></td>
	</tr>
</table>

<%= simple_markdown(grade.comments) %>

<% end %>

<% else %>

Grades are currently hidden.

<% end %>

