<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">

		<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</a>

		<a class="brand" href="/"><%= Course.course['short'] %></a>

		<div class="nav-collapse collapse">

			<ul class="nav">
				<% for section in Section.all %>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= section.title %> <b class="caret"></b></a>
					<ul class="dropdown-menu" role="menu">
						<% for page in section.pages %>
						<li><%= link_to page.title, "/#{section.slug}/#{page.slug}" %></li>
						<% end %>
					</ul>
					<% end %>
				</li>
			</ul>

			<ul class="nav pull-right">
				<% if logged_in? %>
				<li><p class="navbar-text" id="loading" style="display:none;"><i class="icon-fire icon-white"></i> Saving</p></li>

				<li class="divider-vertical"></li>
				<li class="dropdown">

					<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i> <%= @user.uvanetid %></a>
					<ul class="dropdown-menu" style="min-width:200px;">
						<li style="padding:6px 10px; background-color:white; margin-bottom:0;">
							<div class="progress" style="margin-bottom:0;">
								<div class="bar" style="width: {{ progress }}%;"></div>
							</div>
						</li>
						<li class="divider"></li>
						<% if is_admin? %>
						<li><a href="#myModal" data-toggle="modal" data-backdrop="static">Update courseware...</a></li>
						<% end %>
						<li><%= link_to 'Logout', :controller => 'homepage', :action => 'logout' %></li>
					</ul>
				</li>
				<% else %>
				<li><%= link_to("<i class='icon-user icon-white'></i> Sign in".html_safe, RubyCAS::Filter.login_url(controller))%></li>
				<% end %>
			</ul>

		</div>

	</div>
</div>

<div id="myModal" class="modal hide fade">
	<div class="modal-header">
		<h3>Updating courseware</h3>
	</div>
	<div id="modal-body" class="modal-body">
		Starting...
	</div>
	<div class="modal-footer">
		<a href="/" class="btn btn-primary">Close</a>
	</div>
</div>

<script>
$('#myModal').on('shown', function () {
	$.post('/admin/import_do', function(data)
		{
			$('#modal-body').html(data);
		}
	)
})
</script>
