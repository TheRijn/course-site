<div class="navbar navbar-fixed-top">

	<a href="/" class="navbar-brand"><i class="glyphicon glyphicon-home"></i> <%= Course.course['short'] %></a>

	<ul class="nav navbar-nav">
		<% for section in Section.all %>
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= section.title %> <span class="caret"></span></a>
			<ul class="dropdown-menu" role="menu">
				<% for page in section.pages %>
				<li><%= link_to (page.title + page_done_icon(@user, page.pset)).html_safe, "/#{section.slug}/#{page.slug}" %></li>
				<% end %>
			</ul>
			<% end %>
		</li>
	</ul>

	<ul class="nav navbar-nav pull-right">
		<% if logged_in? %>
		<li><p class="navbar-text" id="loading" style="display:none;"><i class="glyphicon glyphicon-fire"></i> Saving</p></li>

		<li class="divider-vertical"></li>
		<li class="dropdown">

			<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> <%= @user.name || @user.uvanetid %></a>
			<ul class="dropdown-menu" style="min-width:200px;">
				<% if is_admin? %>
				<li><a data-target="#myModal" data-toggle="modal"><i class="glyphicon glyphicon-refresh"></i> Update courseware...</a></li>
				<li class="divider"></li>
				<li><%= link_to '<i class="glyphicon glyphicon-tasks"></i> List users'.html_safe, :controller => 'admin', :action => 'users' %></li>
				<li><%= link_to '<i class="glyphicon glyphicon-download-alt"></i> Manage dropbox'.html_safe, :controller => 'admin', :action => 'dropbox' %></li>
				<li class="divider"></li>
				<% end %>
				<li><%= link_to '<i class="glyphicon glyphicon-user"></i> Edit Profile'.html_safe, :controller => 'homepage', :action => 'profile' %></li>
				<li><%= link_to '<i class="glyphicon glyphicon-ban-circle"></i> Logout'.html_safe, :controller => 'homepage', :action => 'logout' %></li>
			</ul>
		</li>
		<% else %>
		<li><%= link_to("<i class='glyphicon glyphicon-user'></i> Sign in".html_safe, RubyCAS::Filter.login_url(controller))%></li>
		<% end %>
	</ul>

</div>

<div id="myModal" class="modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h3>Updating courseware</h3>
			</div>
			<div id="modal-body" class="modal-body">
				Starting...
			</div>
			<div class="modal-footer">
				<a href="/" class="btn btn-primary">Close</a>
			</div>
		</div>
	</div>
</div>

<script>
$('#myModal').on('shown', function () {
	$.post('/admin/import_do', function(data)
		{
			$('#modal-body').html(data);
		}
	)
})
</script>
