<nav class="navbar navbar-static-top">

	<div class="navbar-header">
		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>
		<a href="/" class="navbar-brand"><span class="glyphicon glyphicon-home"></span> <%= Course.course['short'] %></a>
	</div>

	<div class="collapse navbar-collapse navbar-ex1-collapse">
		<ul class="nav navbar-nav">
			<% for section in @sections %>
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= section.title %> <span class="caret"></span></a>
				<ul class="dropdown-menu" role="menu">
					<% for page in section.pages %>
					<li><%= link_to (page.title).html_safe, "/#{section.slug}/#{page.slug}" %></li>
					<% end %>
				</ul>
				<% end %>
			</li>
		</ul>

		<ul class="nav navbar-nav navbar-right">
			<% if logged_in? %>
			<li><p class="navbar-text" id="loading" style="display:none;"><i class="glyphicon glyphicon-fire"></i> Saving</p></li>

			<li class="divider-vertical"></li>
			<li class="dropdown">

				<a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> <%= current_user.name || current_user.uvanetid %></a>
				<ul class="dropdown-menu" style="min-width:200px;">
					<% if is_admin? %>
					<li><%= link_to '<i class="glyphicon glyphicon-download-alt"></i> Update courseware...'.html_safe, course_import_path, method: :post %></li>
					<li><%= link_to '<i class="glyphicon glyphicon-list-alt"></i> Grading list'.html_safe, grades_path %></li>
					<li><%= link_to '<i class="glyphicon glyphicon-tasks"></i> Manage students'.html_safe, course_grades_path %></li>
					<% if Settings.public_grades %>
					<li><%= link_to '<i class="glyphicon glyphicon-bullhorn"></i> Grades are public, hide now'.html_safe, course_toggle_public_grades_path, method: :post %></li>
					<% else %>
					<li><%= link_to '<i class="glyphicon glyphicon-bullhorn"></i> Grades are hidden, make public'.html_safe, course_toggle_public_grades_path, method: :post %></li>
					<% end %>
					<li class="divider"></li>
					<li><%= link_to '<i class="glyphicon glyphicon-user"></i> Admins'.html_safe, admin_admins_path %></li>
					<li><%= link_to '<i class="glyphicon glyphicon-asterisk"></i> Manage dropbox'.html_safe, dropbox_path %></li>
					<li class="divider"></li>
					<% end %>
					<% if is_assistant? %>
					<li><%= link_to '<i class="glyphicon glyphicon-tasks"></i> Grading'.html_safe, grades_path %></li>
					<% else %>
					<li><%= link_to '<i class="glyphicon glyphicon-user"></i> Grades'.html_safe, profile_grades_path %></li>
					<% end %>
					<li><%= link_to '<i class="glyphicon glyphicon-ban-circle"></i> Logout'.html_safe, profile_logout_path %></li>
				</ul>
			</li>
			<% else %>
			<li><%= link_to("<span class='glyphicon glyphicon-user'></span> Sign in".html_safe, CASClient::Frameworks::Rails::Filter.login_url(controller))%></li>
			<% end %>
		</ul>
	</div>

</nav>

<% if flash[:error] %>
<div class="alert alert-danger">
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<%= flash[:error] %>
</div>
<% end %>

<% if flash[:notice] %>
<div class="alert alert-success">
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<%= flash[:notice] %>
</div>
<% end %>
