<% for section in @sections %>

<li class="nav-item dropdown hidden-xs">
	<a href="#collapse-<%= section.title.parameterize %>" class="nav-link dropdown-toggle" data-toggle="collapse" role="button" aria-haspopup="true" aria-expanded="false">
		<%= section.title %> <span class='caret'></span>
	</a>
	<ul class="nav collapse" id="collapse-<%= section.title.parameterize %>">
		<% for page in section.pages %>
		<li class="nav-item"><%= link_to (page.title).html_safe, "/#{section.slug}/#{page.slug}", class: 'nav-link ' + (page.public ? '' : 'menu-hidden') %></li>
		<% end %>
	</ul>
</li>

<% end %>
