<h2 class="mb-2">
	<%= fa_icon "id-card", style: 'margin-right:0.25em;', class: 'dropcap'  %>
	Permissions
</h2>
<p>Any student uploads will be placed in this Dropbox account.</p>

<div id="permissions-modal" class="modal bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div id="modal-header" class="modal-header">
				<h5 class="modal-title">Permissions</h5>
			</div>
			<div id="modal-body" class="modal-body">
				<p style="text-align:center; font-size:xx-large"><%= fa_icon 'cog', class:'fa-spin' %></p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>

<a href="#" class="btn btn-primary" data-toggle="modal" data-target="#permissions-modal">Edit permissions</a>

<script>
	$('#permissions-modal').on('show.bs.modal', function (e) {
		$('#modal-body').html('<p style="text-align:center; font-size:xx-large"><%= fa_icon "cog", class:"fa-spin" %></p>');
		
		// elt = $(e.relatedTarget);
		$('#modal-body').load('/config/permissions');
	})
</script>
