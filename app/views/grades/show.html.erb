<h1>Grade</h1>

<div class="panel panel-default">
	<div class="panel-heading">
		<strong><%= @grade.submit.pset.name %></strong> <%= "/ #{@submit.used_login}" if @submit %> / <strong><%= @grade.status %></strong>
		<div class="pull-right">
			<% @grade.subgrades.each_pair do |k,v| %>
			<%= v %> /
			<% end %>
			<% if current_user.senior? %>
			<strong><%= translate_grade(@grade.any_final_grade) %></strong>
			<% end %>
		</div>
	</div>
	<div class="panel-body">
		<%= simple_markdown(@grade.comments) %>
	</div>
</div>

<% if @grade.published? %>
<%= link_to "Mark as Discussed", submit_grade_path(submit_id: @submit.id, grade: { status: :discussed }, referer: submits_discuss_path), method: :put, data: { confirm: "Sure?" }, class: 'btn btn-primary' %>
<% end %>
<% if current_user.senior? && @submit.grade %>
<%= link_to "Re-open this grade", submit_grade_path(submit_id: @submit.id, grade: { status: :open }), method: :put, data: { confirm: "Sure?" }, class: 'btn btn-default' %>
<% end %>
